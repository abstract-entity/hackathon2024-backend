{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS (start:dev)",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:dev"
        ],
        "port": 9229,
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "timeout": 30000,
        "protocol": "inspector",
        "env": {
          "TS_NODE_PROJECT": "tsconfig.build.json"
        },
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      }
    ]
  }
  